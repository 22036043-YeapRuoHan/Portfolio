<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <title>UploadFile</title>
</head>
<body>
    <div class="container m-3">

        <form method="post"
              action="~/Demo/UploadFilePost"
              enctype="multipart/form-data">

            <div class="col-6 mb-3">
                <label for="formFile" class="form-label">Picture:</label>
                <input type="file" class="form-control" id="formFile"
                       name="Picture">
            </div>

            @if (ViewData["Picture"] != null)
            {
                <div class="form-group row">
                    <div class="mb-3">
                        <img src="~/photos/@ViewData["Picture"]" height="200" />
                    </div>
                </div>
            }

            <div class="form-group row">
                <div class="mb-3">
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </div>

            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="col-6">
                        <div class="alert alert-@ViewData["MsgType"]">
                            <text>@Html.Raw(ViewData["Message"])</text>
                        </div>
                    </div>
                </div>
            }

        </form>

    </div>

</body>
</html>
