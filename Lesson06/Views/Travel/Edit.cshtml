@model Trip

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />
    <title>Edit</title>
</head>
<body>
    @await Html.PartialAsync("TravelMenu");

    <div class="container">
        <form method="post" action="~/Travel/EditPost">

            <h3>Update Trip</h3>

            <input type="text" name="ID" value="@Model.ID" hidden />

            <div class="form-group mb-3">
                <div class="col-auto">
                    <img id="ImgPhoto" class="rounded-3"
                         src="~/Photos/@Model.PhotoFile" style="Height:200px;" />
                </div>
            </div>

            <div class="col-md-6 mb-3 form-floating">
                <input type="text" class="form-control" id="title" name="Title"
                       placeholder="title" value="@Model.Title" readonly />
                <label for="name">Title</label>
            </div>

            <div class="col-md-6 mb-3 form-floating">
                <input type="text" class="form-control" id="city" name="City"
                       placeholder="city" value="@Model.City" readonly />
                <label for="name">City</label>
            </div>

            <div class="col-md-3 mb-3 form-floating">
                <input type="date" class="form-control" id="tripdate" name="TripDate"
                       placeholder="tripdate" value="@String.Format("{0:yyyy-MM-dd}", Model.TripDate)" readonly />
                <label for="tripdate">Trip Date</label>
            </div>

            <div class="col-md-3 mb-3 form-floating">
                <input type="number" min="0" class="form-control" id="duration" name="Duration"
                       placeholder="duration" value="@Model.Duration" readonly />
                <label for="tripdate">Duration (days)</label>
            </div>

            <div class="col-md-3 mb-3 form-floating">
                <input type="number" min="0" step="any" class="form-control" id="cost" name="Cost"
                       placeholder="cost" value="@Model.Spending" readonly />
                <label for="tripdate">Total Cost ($)</label>
            </div>

            <div class="col-md-6 mb-3 form-floating">
                <textarea type="text" class="form-control" id="story" name="Story"
                          style="height: 100px"
                          placeholder="story" required>@Model.Story</textarea>
                <label for="story">Story</label>
            </div>

            <div class="form-group row">
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

            @if (ViewData["Message"] != null)
            {
                    <div class="form-group row">
                        <div class="col-6">
                            <div class="alert alert-@ViewData["MsgType"]">
                                <b>Message: </b>@ViewData["Message"]<br />
                            @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                            {
                                <b>SQL: </b>
                                @ViewData["ExecSQL"]?.ToString()
                            }
                            </div>
                        </div>
                    </div>
            }
        </form>
    </div>
</body>
</html>
