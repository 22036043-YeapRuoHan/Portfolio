@model Trip

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />
    <title>Add</title>
</head>
<body>
    @await Html.PartialAsync("TravelMenu");

    <div class="container">
        @{
            // TODO: Lesson06 Task 4a - Fill in the Attributes for the FORM element
        }
        <form method="post" action="AddPost" enctype="multipart/form-data">

            <h3>New Trip</h3>

            <div class="col-md-6 mb-3 form-floating">
                <input type="text" class="form-control" id="title" name="Title"
                       placeholder="title" required />
                <label for="title">Title</label>
            </div>

            @{
                // TODO: Lesson06 Task 4b - Add City:
            }
            <div class="col-md-6 mb-3 form-floating">
                <input type="text" class="form-control" id="city" name="City"
                       placeholder="city" required />
                <label for="title">City</label>
            </div>

            <div class="col-md-3 mb-3 form-floating">
                <input type="date" class="form-control" id="tripdate" name="TripDate"
                       placeholder="tripdate" required />
                <label for="tripdate">Trip Date</label>
            </div>

            <div class="col-md-3 mb-3 form-floating">
                <input type="number" min="1" class="form-control"
                       id="duration" name="Duration" placeholder="0" required />
                <label for="duration">Duration (days)</label>
            </div>

            @{
                // TODO: Lesson06 Task 4c - Add Total Cost :
            }
            <div class="col-md-3 mb-3 form-floating">
                <input type="number" min="0" step="any" class="form-control"
                       id="cost" name="Cost" placeholder="0.00" required />
                <label for="cost">Cost ($)</label>
            </div>
            <div class="col-md-6 mb-3 form-floating">
                <textarea class="form-control" id="story" name="Story"
                          style="height: 100px" placeholder="story"></textarea>
                <label for="story">Story</label>
            </div>

            <div class="col-6 mb-3">
                <label for="formfile">Add an image</label>
                <input type="file" class="form-control mb-3" id="formfile"
                       name="Photo" onchange="preview()" required>
                <img id="frame" height="100" src="" />
            </div>

            <div class="form-group row">
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="alert alert-@ViewData["MsgType"]">
                            <b>Message: </b>@ViewData["Message"]<br />
                            @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                            {
                                <b>SQL: </b>
                                @ViewData["ExecSQL"]?.ToString()
                            }
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>

    <script>
        function preview() {
            frame.src = URL.createObjectURL(event.target.files[0]);
        }

        function clearImage() {
            document.getElementById('formFile').value = null;
            frame.src = "";
        }
    </script>

</body>
</html>

