                <label for="fielde">Field E : </label>
            </div>

            <div class="mb-3 col-8 form-floating">
                
                <textarea class="form-control" id="fieldf" name="Fieldf" cols="35" rows="4" placeholder="Add comments here"></textarea>
                <label for="fieldf">Field F : </label>
            </div>

            <div>
