<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <title>BookDelete</title>
</head>
<body>
    @await Html.PartialAsync("BwNavBar")

    <div class="container">
        <form method="post" action="~/BookWorm/BookDeletePost">

            <div class="mt-3">
                <h2>Delete book</h2>
            </div>

            <div class="mb-3 col-5 form-floating">
                <input type="text" class="form-control" id="isbn" name="Isbn"
                       placeholder="isbn" />
                <label for="isbn">ISBN:</label>
            </div>

            <div class="mb-3 col-1">
                <input type="submit" value="Delete book" class="btn btn-outline-danger" />
            </div>


            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="alert alert-@ViewData["MsgType"]">
                            <b>Message: </b>@ViewData["Message"]<br />
                            @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                            {
                                <b>SQL: </b>@ViewData["ExecSQL"]?.ToString()
                            }
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>

</body>
</html>
