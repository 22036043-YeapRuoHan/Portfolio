@model Email

@{
    Layout = "_Layout";
}

<div class="container">

    <div class="my-3">
        <h2>Send Email</h2>
    </div>

    <form method="post"
          asp-controller="Demo" asp-action="SendEmail">

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="CustomerName" class="form-control"
                   placeholder="CustomerName" />
            <label asp-for="CustomerName">Customer Name</label>
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="CustomerEmail" class="form-control"
                   placeholder="CustomerEmail" />
            <label asp-for="CustomerEmail">Customer Email</label>
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Subject" class="form-control"
                   placeholder="Subject" />
            <label asp-for="Subject">Subject</label>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="col-md-5 mb-3 form-floating">
            <textarea asp-for="Message" class="form-control" style="height: 100px"
                      placeholder="Message"></textarea>
            <label asp-for="Message">Message</label>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="mb-3">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="col-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <b>Message: </b>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <b>SQL: </b>

                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                </div>
            </div>
        }

    </form>
</div>