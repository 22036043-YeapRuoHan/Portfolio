@model Lesson03.Models.AgeModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/lib/bootstrap/umd/popper.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.min.js"></script>

    <title>AgeView</title>
</head>
<body>
    <div class="container m-3">
        <h1>Data time formatting</h1>
        Mary's DOB is: @Model.DobMary.ToString("dd-MMM-yyyy")<br />
        John's DOB is: @Model.DobJohn.ToString("ddd MMM yy")<br />
        Mike's DOB is: @Model.DobMike.ToString("dddd, dd MMM yy")<br />
        Paul's DOB is: @Model.DobPaul.ToString("dd-MM-yyyy")<br />
    </div>
</body>
</html>