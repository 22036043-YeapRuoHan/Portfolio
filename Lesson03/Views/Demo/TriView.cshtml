@model Lesson03.Models.Triangle

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/lib/bootstrap/umd/popper.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.min.js"></script>

    <title>TriView</title>
</head>
<body>
    <div class="container m-3">
        <h1>Random triangle</h1>
        Side A is @Model.Side1
        <br />
        Side B is @Model.Side2
        <br />
        Side C is @Model.Side3
        <br />

        @if (Model.Side1 == Model.Side2 &&
        Model.Side2 == Model.Side3)
        {
            <b>Equilateral</b>
        }
        else if (Model.Side1 == Model.Side2 ||
        Model.Side2 == Model.Side3 ||
        Model.Side1 == Model.Side3)
        {
            <b>Isoceles</b>
        }
        else
        {
            <b>Normal</b>
        }
        Triangle
        <br />

        Perimeter is
        @(Model.Side1 + Model.Side2 + Model.Side3).
    </div>
</body>
</html>
