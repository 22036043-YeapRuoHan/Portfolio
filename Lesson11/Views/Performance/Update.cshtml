@{
    Layout = "_Lemonade";
}

@model Performance;

<form asp-controller="Performance"
      asp-action="Update"
      method="post">

    <div class="my-3">
        <h2>Update Performance</h2>
    </div>

    @{
        //TODO: Lesson11 Task 2 - Complete this form
    }

    <input asp-for="Pid" hidden />

    <div class="col-md-4 mb-3 form-floating">
        <input asp-for="Title" class="form-control"
               placeholder="Title" />
        <label asp-for="Title">Title</label>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-md-4 mb-3 form-floating">
        <input asp-for="Artist" class="form-control"
               placeholder="Artist" />
        <label asp-for="Artist">Artist</label>
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>

    <div class="col-md-4 mb-3 form-floating">
        <input asp-for="PerformDT" class="form-control"
               placeholder="PerformDT" />
        <label asp-for="PerformDT">Performance date</label>
        <span asp-validation-for="PerformDT" class="text-danger"></span>
    </div>

    @{
        List<SelectListItem> dList =
        ViewData["DurationList"] as List<SelectListItem> ??
        new List<SelectListItem>();
    }
    <div class="row">
        <div class="col-md-2 mb-3 form-floating">
            <select class="form-select"
                    asp-for="Duration" asp-items="dList">
            </select>
            <label asp-for="Duration" class="ps-4">Duration</label>
            <span asp-validation-for="Duration"
                  class="text-danger"></span>
        </div>


        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="Price" class="form-control"
                   placeholder="Price" />
            <label asp-for="Price" class="ps-4">Price ($)</label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    @{
        List<SelectListItem> cList =
        ViewData["ChamberList"] as List<SelectListItem> ??
        new List<SelectListItem>();
    }

    <div class="col-md-3 mb-3 form-floating">
        <select class="form-select"
                asp-for="Chamber" asp-items="cList">
        </select>
        <label asp-for="Chamber">Chamber</label>
        <span asp-validation-for="Chamber"
              class="text-danger"></span>
    </div>

    <div class="col-auto mb-3">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="col-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <b>Message: </b>@ViewData["Message"]<br />
                    @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                    {
                        <b>SQL: </b>

                        @ViewData["ExecSQL"]?.ToString()
                    }
                </div>
            </div>
        </div>
    }

</form>
