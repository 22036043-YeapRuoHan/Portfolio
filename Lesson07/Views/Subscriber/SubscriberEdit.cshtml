@model Subscriber
@{
    ViewData["Title"] = "SubscriberEdit";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />
    <title>SubscriberEdit</title>
</head>
<body>
    @await Html.PartialAsync("SocNavBar")

    <div class="container">

        <div class="my-3">
            <h2>Edit Subscriber</h2>
        </div>

        <form method="post"
              action="/Subscriber/SubscriberEditPost">

            <div class="col-md-4 mb-3 form-floating">
                <input type="text" id="sid" name="subId" class="form-control"
                       placeholder="subId" value="@Model.SubscriberId" readonly />
                <label for="sid">Subscriber ID :</label>
            </div>

            <div class="col-md-4 mb-3 form-floating">
                <input type="text" id="username" name="uname" class="form-control"
                       placeholder="uname" value="@Model.UserName" required />
                <label for="username">Username :</label>
            </div>

            <div class="col-md-5 mb-3 form-floating">
                <input type="text" id="firstname" name="name1" class="form-control"
                       placeholder="fname" value="@Model.FirstName" required />
                <label for="firstname">First Name :</label>
            </div>

            <div class="col-md-5 mb-3 form-floating">
                <input type="text" id="familyname" name="name2" class="form-control"
                       placeholder="familyname" value="@Model.FamilyName" required />
                <label for="familyname">Family Name :</label>
            </div>

            <div class="col-md-3 mb-3 form-floating">
                <input type="date" id="dob " name="datebirth" class="form-control"
                       placeholder="YYYY-MM-DD" required
                       value="@String.Format("{0:yyyy-MM-dd}",Model.DateOfBirth)" />
                <label for="dob">Date of Birth :</label>
            </div>

            <div class="mb-3 form-floating">
                <div class="border-0 form-control h-auto">
                    <div class="form-check form-check-inline">
                        <input type="checkbox" class="form-check-input" id="pubprof" name="publicprofile"
                               value="Yes" checked="@Model.PublicProfile" />
                        <label class="form-check-label" for="pubprof">Public Profile</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" class="form-check-input" id="autofriend" name="autofriends"
                               value="Yes" checked="@Model.AutoAcceptFriends" />
                        <label class="form-check-label" for="autofriend">Auto-accept Friends</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" class="form-check-input" id="bposts" name="broadcast"
                               value="Yes" checked="@Model.BroadcastPosts" />
                        <label class="form-check-label" for="bposts">Broadcast Posts</label>
                    </div>
                </div>
                <label>Settings :</label>
            </div>

            <input type="submit" class="mb-3 btn btn-primary" value="Save" />

            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="alert alert-@ViewData["MsgType"]">
                            <b>Message: </b>@ViewData["Message"]<br />
                            @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                            {
                                <b>SQL: </b>

                                @ViewData["ExecSQL"]?.ToString()
                            }
                        </div>
                    </div>
                </div>
            }

        </form>
    </div>
</body>
</html>