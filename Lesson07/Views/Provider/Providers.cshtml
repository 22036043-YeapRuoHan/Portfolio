@model DataRowCollection
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />
    <title>Providers</title>
</head>
<body>
    @await Html.PartialAsync("SocNavBar")

    <div class="container">

        <div class="mt-3">
            <h3>All Providers</h3>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MsgType"]">
                @TempData["Message"]
            </div>
        }

        @if (Model != null)
        {
            <table class='table table-striped table-hover'>
                <tr>
                    <th class="col-md-1">ID</th>
                    <th class="col-md-3">Name</th>
                    <th class="col-md-1">Action</th>
                </tr>

                @foreach (DataRow row in Model)
                {
                    <tr>
                        <td class="col-md-1">@row["provider_id"]</td>
                        <td class="col-md-3">@row["name"]</td>

                        <td class="col-md-1">
                            <a href="/Provider/ProviderEdit/@row["provider_id"]"
                       style="text-decoration:none; color:dodgerblue">
                                <i class="bi bi-pencil"></i>
                            </a>
                            |
                            <a href="/Provider/ProviderDelete/@row["provider_id"]"
                       style="text-decoration:none; color:indianred"
                       onclick="return confirm('Delete Provider [@row["name"]]')">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p class="alert alert-danger">No Providers found.</p>
        }
    </div>

</body>
</html>
