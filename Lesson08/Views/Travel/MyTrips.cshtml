@model List<Trip>

<div class="container">

    <div class="my-3">
        <h2>My Travel Highlights</h2>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@TempData["MsgType"]">
            @TempData["Message"]
        </div>
    }
    <div class="row">
        @foreach (Trip row in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header">
                        @row.Title (@string.Format("{0:yyyy MMM}", row.TripDate))
                    </div>
                    <div class="card-body">
                        <a asp-controller="Travel" asp-action="Details" asp-route-id="@row.Id">
                            <img src="~/photos/@row.Picture"
                             width="150" height="90"
                             class="pull-left" style="padding-right: 5px;" />
                        </a>
                        <div>
                            <small>
                                @row.Story.Abbreviate()
                                <a asp-controller="Travel"
                               asp-action="Update"
                               asp-route-id="@row.Id"
                               style="text-decoration:none; color:dodgerblue">
                                    <i class="bi bi-pencil"></i>
                                </a> |
                                <a asp-controller="Travel"
                               asp-action="Delete"
                               asp-route-id="@row.Id"
                               style="text-decoration:none; color:indianred"
                               onclick="return confirm('Delete Trip [@row.Title]')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

