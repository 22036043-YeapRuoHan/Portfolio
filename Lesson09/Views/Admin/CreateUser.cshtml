@model TravelUser;

<div class="container">

    <div class="my-3">
        <h2>Create Travel User</h2>
    </div>

    <form method="post"
          asp-controller="Admin"
          asp-action="CreateUser">

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="UserId" class="form-control"
                   placeholder="UserId" />
            <label asp-for="UserId">User Id</label>
            @{
                // TODO: Lesson09 Task 4a - Validation Message for UserId
                
            }
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="col-md-5 mb-3 form-floating">
            <input asp-for="FullName" class="form-control"
                   placeholder="FullName" />
            <label asp-for="FullName">Full Name</label>
            @{
                // TODO: Lesson09 Task 4b - Validation Message for FullName
               
            }
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="col-md-5 mb-3 form-floating">
            <input asp-for="Email" class="form-control"
                   placeholder="Email" />
            <label asp-for="Email">Email</label>
            @{
            // TODO: Lesson09 Task 4c - Validation Message for Email
                
            }
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Dob" class="form-control"
                   placeholder="Dob" />
            <label asp-for="Dob">Date of Birth</label>
            @{
                // TODO: Lesson09 Task 4d - Validation Message for Dob
               
            }
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>

        <div class="col-md-5 mb-3 form-floating">
            <input asp-for="UserPw" class="form-control"
                   placeholder="UserPw" />
            <label asp-for="UserPw">Password</label>
            @{
                // TODO: Lesson09 Task 4e - Validation Message for UserPw
                
            }
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>

        <div class="col-md-5 mb-3 form-floating">
            <input asp-for="UserPw2" class="form-control"
                   placeholder="UserPw2" />
            <label asp-for="UserPw2">Confirm Password</label>
            @{
                // TODO: Lesson09 Task 4f - Validation Message for UserPw2
                
            }
            <span asp-validation-for="UserPw2" class="text-danger"></span>
        </div>

        <div class="mb-3 form-floating">
            <div class="form-control border-0 h-auto">
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" asp-for="UserRole" value="user" checked />
                    <label class="form-check-label" asp-for="UserRole">User</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" asp-for="UserRole" value="admin" />
                    <label class="form-check-label" asp-for="UserRole">Admin</label>
                </div>
            </div>
            <label>Role</label>
        </div>

        <div class="form-group row">
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="col-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <b>Message: </b>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <b>SQL: </b>

                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                </div>
            </div>
        }
    </form>
</div>