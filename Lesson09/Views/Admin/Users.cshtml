@model List<TravelUser>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<table class="table table-condensed table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Date of Birth</th>
        <th>Role</th>
        <th>Last Login</th>
        <th>Action</th>
    </tr>
    @foreach (TravelUser user in Model)
    {
        <tr>
            <td>@user.UserId</td>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@String.Format("{0:yyyy MMM}", user.Dob)</td>
            <td>
                @{
                    // TODO: Lesson09 Task 3 - Use Razor to check UserRole and display
                    // either "Member" or "Administrator"
                    @if (user.UserRole.Equals("user"))
                    {
                        <span>Member</span>
                    }
                    else
                    {
                        <span>Administrator</span>
                    }
                }
            </td>
            <td>@String.Format("{0:yyyy-MM-dd hh:mm:ss}", user.LastLogin)</td>
            <td>
                <a asp-controller="Admin"
               asp-action="Delete"
               asp-route-id="@user.UserId"
               onclick="return confirm('Delete User [@user.FullName]')">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>

