@model DemoData

@{
    Layout = "_Layout";
}

<div class="container">

    <div class="my-3">
        <h2>Validation Demonstration</h2>
    </div>

    <form asp-controller="Validation"
          asp-action="Demo"
          method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="DateFieldA" class="form-control"
                   placeholder="DateFieldA" />
            <label asp-for="DateFieldA">Date A</label>
            <span asp-validation-for="DateFieldA" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="DateFieldB" class="form-control"
                   placeholder="DateFieldB" />
            <label asp-for="DateFieldB">Date B</label>
            <span asp-validation-for="DateFieldB" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Teenager" class="form-control"
                   placeholder="Teenager" />
            <label asp-for="Teenager">Teenager</label>
            <span asp-validation-for="Teenager" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="ProductCode" class="form-control"
                   placeholder="ProductCode" />
            <label asp-for="ProductCode">Product Code</label>
            <span asp-validation-for="ProductCode" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="EmailField" class="form-control"
                   placeholder="EmailField" />
            <label asp-for="EmailField">Email</label>
            <span asp-validation-for="EmailField" class="text-danger"></span>
        </div>

        <div class=" mb-3 form-group row">
            <div class="col-md-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="col-4">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <b>Message: </b>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <b>SQL: </b>

                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                </div>
            </div>
        }
    </form>
</div>